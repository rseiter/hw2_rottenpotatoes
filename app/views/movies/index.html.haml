%h1 All Movies

= form_tag movies_path, :method => :get do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", "1", checked?(rating)
  = submit_tag 'Refresh', :id => "ratings_submit"

%table#movies
  %thead
    %tr
      %th{:class => hilite?(:title)}= link_to "Movie Title", movies_path(:ratings => @ratings_hash, :order => :title), :id => "title_header"
      %th= link_to "Rating", movies_path(:ratings => @ratings_hash, :order => :rating)
      %th{:class => hilite?(:release_date)}= link_to "Release Date", movies_path(:ratings => @ratings_hash, :order => :release_date), :id => "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
